<%- include("partials/LoginH"); -%>

<div class="myaccount-main-div">
    <h3 class="h1-profile">My Account</h3>
    <a href="editinfo" class="editbtn">Edit info</a>
    <div class="circle">
        <!-- User Profile Image -->
        <img class="profile-pic" src="/images/user.png">
 
        <!-- Default Image -->
        <!-- <i class="fa fa-user fa-5x"></i> -->
      </div>
      <div class="p-image">
          <label for="">Upload</label>
        <i class="fa fa-camera upload-button"></i>
         <input class="file-upload" type="file" accept="image/*"/>
      </div>
      <div class="info-div">
        <label class="lb">first name : </label>
        <label><%= userfname %></label> <br>
        <label class="lb">last name : </label>
        <label><%= userlname %></label> <br>
        <label class="lb">email : </label>
        <label><%= useremail %></label> <br>
        <label class="lb">contact : </label>
        <label><%= usermobile %></label> <br>
        <label class="lb">password : </label>
        <label><%= userpassword %></label>
      </div>
      <h3 class="h3-plan">User plans</h3>
      <table>
          <tr>
              <th>Plan</th>
              <th>Expriy date</th>
              <th>Status</th>
          </tr>
          <tr>
            <td><%= userplan %></td>
            <td><%= planexpiry %></td>
            <td> <img src="<%= planstatus %> " alt="" class="active">  </td>
          </tr>
      </table>
      
      <h3 class="h3-plan">User card details</h3>
      <a href="editcard" class="editbtn">Edit Card</a>
      <label class="lb">card no</label>
      <h6> <%= cardno %>  </h6>
      <i class="fa fa-cc-visa" style="color:navy;"></i> <br>
      <label class="lb">expriy</label> 
      <h6> <%= expirydate %>  </h6> <br>
      <label class="lb">CVV</label> 
      <h6> <%= cvv %>  </h6>
</div>

<script>
    $(document).ready(function() {

    
var readURL = function(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $('.profile-pic').attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
    }
}


$(".file-upload").on('change', function(){
    readURL(this);
});

$(".upload-button").on('click', function() {
   $(".file-upload").click();
});
});
</script>

